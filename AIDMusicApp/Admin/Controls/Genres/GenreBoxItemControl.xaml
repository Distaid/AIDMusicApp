<UserControl x:Class="AIDMusicApp.Admin.Controls.Genres.GenreBoxItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIDMusicApp.Admin.Controls.Genres"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800"
             Height="30" Width="Auto">
    
    <Border Background="Transparent">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0" x:Name="GenreComboBox" Style="{StaticResource AIDComboBoxStyle}" Margin="5 2"/>
            <Button Grid.Column="1" x:Name="RemoveButton" Content="Удалить" Style="{StaticResource AIDButtonStyle}" Margin="5 2"/>
        </Grid>
    </Border>
</UserControl>
